<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/Ly_my_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tx_my_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가맹점"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"/>
<!--
        <TextView
            android:id="@+id/Tx_my_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="품목"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginLeft="4dp"/>
-->
    </LinearLayout>


    <TextView
        android:id="@+id/Tx_my_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-08-29"
        android:textSize="12dp"
        android:layout_below="@+id/Ly_my_top"
        android:layout_marginTop="6dp"/>

    <RatingBar
        android:id="@+id/Rb_my_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/Tx_my_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Tx_my_review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rb_my_score"
        android:layout_marginTop="8dp"
        android:text="너무 맛있다!"
        android:textSize="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tx_my_review_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/Btn_revise"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="수정"
            android:textColor="@color/selector_txt_border"
            android:background="@drawable/selector_btn_border"/>

        <Button
            android:id="@+id/Btn_my_delete"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="삭제"
            android:textColor="@color/selector_txt_border"
            android:background="@drawable/selector_btn_border"/>

    </LinearLayout>
</RelativeLayout>
